<%= flash[:success] %>
<p id="notice">
 <%=  flash[:notice] %>
</p>

   <div class="container">
  <div class="row">
   <div class="col-xs-3">
    <%= render 'books/list', book: @book, user: @users %>
   </div>
   <div class="col-xs-9">
<h3>Books</h3>
  <table class="table table-striped">
   <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
   </thead>
   <tbody>
   <% @books.each do |book| %>
    <tr>
     <td>
     <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
     </td>
     <td>
     <%= link_to book.title, book_path(book) %>
     </td>
     <td>
     <%= book.body %>
     </td>
   </tr>
   <% end %>
  </tbody>
  </table>
  </div>
  </div>
 </div>