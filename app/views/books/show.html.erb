<p id="notice">
 <%=  flash[:notice] %>
</p>

 <div class="container">
  <div class="row">
   <div class="col-xs-3">
    <%= render 'books/list', book: @book, user: @user %>
   </div>
   <div class="col-xs-9">
<h1>Book detail</h1>
  <table class="table table-condensed">
   <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
   </thead>
   <tbody>
    <tr>
     <td>
     <%= link_to user_path(@user) do %>
      <%= attachment_image_tag @books.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:"50x50" %>
      <%= @user.name %>
     <% end %>
    </td>
     <td>
     <%= @books.title %>
     </td>
     <td>
     <%= @books.body %>
     </td>
     <td>
     <% if @books.user == current_user %>
     <%= link_to "Edit", edit_book_path(@books), class:"btn btn-success" %>
     <% end %>
     <% if @books.user == current_user %>
     <%= link_to "Destroy", book_path(@books), class:"btn btn-danger",method: :delete, data: {confirm: "本当に消しますか？"} %>
     <% end %>
    </td>
   </tr>
  </tbody>
  </table>
  </div>
  </div>
 </div>