<p id="notice">
 <%=  flash[:notice] %>
</p>

 <div class="container">
  <div class="row">
   <div class="col-xs-3">
    <%= render 'books/list', book: @book, user: @user %>
   </div>
   <div class="col-xs-9">
<h1>Book detail</h1>
  <table class="table table-striped">
   <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
   </thead>
   <tbody>
    <tr>
     <td>
     <%= link_to user_path(@user) do %>
      <%= attachment_image_tag @books.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
      <%= @user.name %>
     <% end %>
    </td>
     <td>
     <%= @books.title %>
     </td>
     <td>
     <%= @books.body %>
     </td>
     <td>
     <% if @books.user == current_user %>
     <%= link_to "Edit", edit_book_path(@books) %>
     <% end %>
     <% if @books.user == current_user %>
     <%= link_to "Destroy", book_path(@books),method: :delete, data: {confirm: "本当に消しますか？"} %>
     <% end %>
    </td>
   </tr>
  </tbody>
  </table>
  </div>
  </div>
 </div>